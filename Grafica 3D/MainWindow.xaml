<Window x:Class="Grafica_3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafica_3D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Viewport3D Grid.Row="0" Grid.Column="0" Name="MainViewport" Margin="0,10,10,0" />
        <Border Grid.Column="1" Background="GhostWhite" BorderBrush="Silver" BorderThickness="1" CornerRadius="8,8,8,8">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="68*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="GhostWhite" BorderBrush="Silver" BorderThickness="1" CornerRadius="8,8,8,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,103,0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Button x:Name="zoom_in" Content="Zoom in" HorizontalAlignment="Center" VerticalAlignment="Center" Width="63" Height="26" Click="zoom_in_Click"/>
                            <Button x:Name="zoom_out" Grid.Row="1" Content="Zoom out" HorizontalAlignment="Center" VerticalAlignment="Center" Width="63" Height="32" Click="zoom_out_Click"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="28,0,31,0" Grid.ColumnSpan="2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Height="100" Width="100" Source="/camera.png"/>
                            <Slider x:Name="slider_Theta" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="120" Minimum="-180" Maximum="180" ValueChanged="slider_Theta_ValueChanged"/>
                        </Grid>
                        <Slider x:Name="slider_Phi" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Height="120" Minimum="-90" Maximum="90" ValueChanged="slider_Phi_ValueChanged"/>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Lumină" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Slider x:Name="lumina" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="120" Maximum="255" ValueChanged="lumina_ValueChanged"/>
                </Grid>
                <Button Grid.Row="3" Content="Desenează" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Height="30" Click="Button_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
